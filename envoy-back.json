{
  "listeners": [
    {
      "address": "tcp://0.0.0.0:80",
      "filters": [
        {
          "name": "http_connection_manager",
          "config": {
            "codec_type": "auto",
            "stat_prefix": "ingress_http",
            "tracing": {
              "operation_name": "ingress",
              "request_headers_for_tags": ["ot-tracer-traceid","ot-tracer-spanid"]
            },
            "route_config": {
              "virtual_hosts": [
                {
                  "name": "donutsalon",
                  "domains": ["*"],
                  "routes": [
                    {
                      "timeout_ms": 0,
                      "prefix": "/",
                      "cluster": "donutsalon"
                    }
                  ]
                }
              ]
            },
            "filters": [
              {
                "name": "router",
                "config": {}
              }
            ]
          }
        }
      ]
    }
  ],
  "tracing": {
    "http": {
      "driver": {
        "type": "dynamic",
        "config": {
          "library": "/usr/local/lib/libjaegertracing.so",
          "config_file": "/etc/jaeger.yaml"
        }
      }
    }
  },
  "admin": {
    "access_log_path": "/dev/null",
    "address": "tcp://0.0.0.0:8001"
  },
  "cluster_manager": {
    "clusters": [
      {
        "name": "donutsalon",
        "connect_timeout_ms": 250,
        "type": "strict_dns",
        "lb_type": "round_robin",
        "hosts": [
          {
            "url": "tcp://127.0.0.1:8080"
          }
        ]
      },
      {
        "name": "jaeger",
        "connect_timeout_ms": 1000, 
        "type": "strict_dns", 
        "lb_type": "round_robin", 
        "hosts": [
          {
            "url": "tcp://jaeger:9411"
          }
        ]
      } 
    ]
  }
}