{
  "listeners": [
    {
      "address": "tcp://0.0.0.0:80",
      "filters": [
        {
          "name": "http_connection_manager",
          "config": {
            "codec_type": "auto",
            "stat_prefix": "ingress_http",
            "route_config": {
              "virtual_hosts": [
                {
                  "name": "backend",
                  "domains": ["*"],
                  "routes": [
                    {
                      "timeout_ms": 0,
                      "prefix": "/",
                      "weighted_clusters": {
                       "clusters": [
                          {
                            "name": "service1",
                            "weight": 50
                          },
                          {
                            "name": "service1",
                            "weight": 50
                          }
                        ]
                      }
                    }
                  ]
                }
              ]
            },
            "filters": [
              {
                "name": "router",
                "config": {}
              }
            ]
          }
        }
      ]
    }
  ],
  "tracing": {
    "http": {
      "driver": {
        "type": "lightstep", 
        "config": {
          "access_token_file": "/etc/ls_access_token",
          "collector_cluster": "lightstep"
        }
      }
    }
  },
  "admin": {
    "access_log_path": "/dev/null",
    "address": "tcp://0.0.0.0:8001"
  },
  "cluster_manager": {
    "clusters": [
      {
        "name": "service1",
        "connect_timeout_ms": 250,
        "type": "strict_dns",
        "lb_type": "round_robin",
        "features": "http2",
        "hosts": [
          {
            "url": "tcp://service1:80"
          }
        ]
      },
      {
        "name": "service2",
        "connect_timeout_ms": 250,
        "type": "strict_dns",
        "lb_type": "round_robin",
        "features": "http2",
        "hosts": [
          {
            "url": "tcp://service2:80"
          }
        ]
      },
      {
        "name": "lightstep",
        "connect_timeout_ms": 1000, 
        "type": "logical_dns", 
        "lb_type": "round_robin",
        "features": "http2",       
        "hosts": [
          {
            "url": "tcp://collector-grpc-staging.lightstep.com:443"
          }
        ]
      }
    ]
  }
}